<div class="box">

<%= link_to (image_tag post.image(:medium)), post %>
<p class="description">
<%= post.description %>
</p>
<p>
	<strong>
		Posted by <%= post.user.name %>
	</strong>
</p>

<% if current_user == post.user %>
<p>
<%= link_to 'Edit', edit_post_path(post) %>
</p>
<p>
<%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
</p>
<% end %>
</div>